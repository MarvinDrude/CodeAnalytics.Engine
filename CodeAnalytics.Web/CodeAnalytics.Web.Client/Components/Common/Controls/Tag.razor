
<div class="tag@(IsActive ? " active" : "")" @onclick="@OnClick">
   @if (IconRender is not null)
   {
      <div class="icon-wrapper">
         @IconRender
      </div>
   }
   @if (Text is not null)
   {
      <div class="text">
         @Text
      </div>
   }
</div>

@code {
   
   [Parameter]
   public RenderFragment? IconRender { get; set; }
   
   [Parameter]
   public bool IsActive { get; set; }
   
   [Parameter]
   public string? Text { get; set; }
   
   [Parameter]
   public string? Value { get; set; }
   
   [Parameter]
   public EventCallback<Tag> Clicked { get; set; }

   private async Task OnClick()
   {
      await Clicked.InvokeAsync(this);
   }
   
}